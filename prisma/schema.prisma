generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Sound {
  id       Int    @id @default(autoincrement())
  title    String
  author   String
  category String
  filename String
  volume   Float  @default(1.0)
}

model ScheduledJob {
  id            Int              @id @default(autoincrement())
  executionType JobExecutionType
  runAt         DateTime? // for one-time jobs
  cronExpr      String? // for cron-based jobs
  tag           JobTag
  payload       String
}

enum JobExecutionType {
  ONCE
  CRON
}

enum JobTag {
  SEND_CHANNEL_MESSAGE
  DAILY_MOTIVATIONAL_QUOTE
  SEND_BADMINTON_REMINDER
}
